extends template

block cssSheets
    link(rel='stylesheet', href='/stylesheets/patients.css')
    link(rel='stylesheet', href='/stylesheets/rom-form.css')
    script.
        window.onload = function() {
            loadExerciseStart();
        }

block content
    form
        #exercisesTitle Exercise Sets
        #exercisepg
        #loading
            p Loading
            img(src='../../img/loading.gif')
        .ex.pt-box
            .ex-info
                .ex-info-name 
                    span Shoulder Extension
                .ex-info-details
                    span 3 sets, 20 reps
            .ex-complete
                img.complete-icon(src='../../img/checkIcon-13.png',onclick='painInput(this)')
    #painInput.modal
        h3 On a scale of 1(least) - 5 (most), how uncomfortable was that exercise?
        br
        input(type='range',min='1',max='5')
        button(onclick='submitPain(this)') Submit
        button(style='background: red',onclick='cancel(this)') Cancel
    script.
        var selectedExercise
        function painInput(ele){
            document.getElementById('painInput').style.display = 'block'
            selectedExercise = ele
        }
        function submitPain(ele){
            document.getElementById('painInput').style.display = 'none'
            selectedExercise.style.filter = 'grayscale(0%)'
            selectedExercise = null
        }
        function cancel(ele){
            document.getElementById('painInput').style.display = 'none'
        }
block footer

