block cssSheets
    link(rel='stylesheet', href='/stylesheets/add-measure.css')
block content
    form
        .inputs
            .input-box.input-header
                .input-name
                    span SHOULDER
                    .input-label
                .progress-icon
            .input-box.input-bottom 
                .measure-container
                    .m-old
                        .num
                            span 25
                        .m-label PREVIOUS
                    .m-new
                        .num
