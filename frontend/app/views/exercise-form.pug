extends template

block cssSheets
    link(rel='stylesheet', href='/stylesheets/exercise-form.css')
    meta(name="viewport", content="width=device-width, initial-scale=1")
block content
    form
        button#applyTemplate Apply Template
        br
        .inputs
            .input-box.input-top#exname
                input.text-input(type='ex-name' name='exerciseName' placeholder='Name of Exercise' onblur="checkName(this.value)")
                .input-name Name
            .input-box#reps           
                .repset-name Reps
                .repset-box
                    button.arith-box -
                    .num-box 15
                    button.arith-box +
            .input-box#sets
                .repset-name Sets
                .repset-box
                    button.arith-box -
                    .num-box 1
                    button.arith-box +
            .input-box.input-bottom
                .input-name#notes Notes
                textarea.text-input(type='notes' id='notes' name='notes' cols="25" placeholder="Type any notes, special requirements, etc. on this exercise here...")
block submitForm
    button.footerButton#buttonRight(type='button') #{footerButton2}