extends template

block cssSheets
    link(rel='stylesheet', href='/stylesheets/exercise-form.css')
    meta(name="viewport", content="width=device-width, initial-scale=1")
    script.
        function changeReps(isInc) {
            var original = document.getElementById('reps-num').innerHTML;
            var value = parseInt(original, 10);
            if (isInc = true) {
                value++;
            }
            else {
                value--;
            };
            document.getElementById('reps-num').innerHTML = value.toString();
        };
        function changeSets(isInc) {
            var original = document.getElementById('sets-num').innerHTML;
            var value = parseInt(original, 10);
            if (isInc = true) {
                value++;
            }
            else {
                value--;
            };
            document.getElementById('sets-num').innerHTML = value.toString();
        };
