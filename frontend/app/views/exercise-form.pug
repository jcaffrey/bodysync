block content
    form
        button#applyTemplate Apply Template
        br
        .inputs
            .input-box.input-top#exname
                input.text-input(type='ex-name' name='exerciseName' placeholder='Name of Exercise' onblur="checkName(this.value)")
                .input-name Name
            .input-box#reps           
                .repset-name Reps
                .repset-box
                    button.arith-box(type='button' onclick='changeReps(false)') -
                    p(id='reps-num') 10
                    button.arith-box(type='button' onclick='changeReps(true)') +
            .input-box#sets
                .repset-name Sets
                .repset-box
                    button.arith-box(type='button' onclick='changeSets(false)') -
                    p(id='sets-num') 2
                    button.arith-box(type='button' onclick='changeSets(true)') +
            .input-box.input-bottom
                .input-name#notes Notes
                textarea.text-input(type='notes' id='notes' name='notes' cols="25" placeholder="Type any notes, special requirements, etc. on this exercise here...")
