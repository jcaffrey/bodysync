extends template

block cssSheets
    link(rel='stylesheet', href='/stylesheets/exercise-set.css')
    meta(name="viewport", content="width=device-width, initial-scale=1")

    script.
      window.onload = function() {
          loadPatientGeneralInfo();
      }

block content
    form
        #generalInfo
        h1 Exercise Set
        button(type='button' onclick="window.location.href='/exercise-form';")#applyTemplate Apply Template
        .pt-box
            .arrows
                .up ▲
                .down ▼
            .exercise-box
                .exName Back Bend
                .recovery-box
                    .sets
                        span 2 sets, 20 seconds
            .rh-box
                .edit-button Edit
                .delete-button Delete
        .plus-button
            a(href='/exercise-form').add +
block submitForm
    button.footerButton#buttonRight(type='button') #{footerButton2}
