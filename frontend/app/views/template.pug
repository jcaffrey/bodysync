doctype html
html
  head
        title= title || "Body Sync"
        link(rel='stylesheet', href='/stylesheets/style.css')
        script(src='/js/fetch.js')
  body
        div#header
            div.outerContainer
                div.innerContainerWide
                    span#profileName #{firstName}
                    a(href='BLAH')
                        button.border-right
                        button.profileAction#settingsButton Settings
                    a(href='BLAH')
                        button.profileAction#logOutButton Log Out
                        button.border-left
                div.innerContainerSmall
                    img(src='#{iconUrl}' id='profileImg')

        div#navbar
            if userType === 'patient'
                a(href='BLAH' class='navButton active') Exercises
                a(href='BLAH' class='navButton') Overview
            else
                a(href='BLAH' class='navButton active') Patients
                a(href='BLAH' class='navButton') Exercise Sets

        div#content
            block content

        div#footer
            block footer

        script(src='/js/bootstrap.js')
        script(src='/js/script.min.js')
        if token
            script localStorage.token = "#{token}"
        block postScript
        if dev
            script(src='//localhost:10000/livereload.js')