@require "helpers"

$mainColor = #2e3192
$inactiveColor = #BBB
$inactiveColor2 = #fafafa
$darkgray = #333
$white = #ffffff

text-color = #000000
mobile-width = 600px


@font-face
    font-family GothamBold
    src url(/fonts/Gotham-Bold.ttf)

@font-face
    font-family GothamLight
    src url(/fonts/Gotham-Light.ttf)

*
    margin 0
    padding 0

body
    margin 0
    padding 0
    height 100vh
    background-color $inactiveColor2

#header
    display inline-block
    height 12%
    width 100%
    background-color $white


.outerContainer
    display inline-block
    height 100%
    width 100%

.innerContainerWide
    display inline-block
    width ((7/8) * 100)%

.innerContainerSmall
    display inline-block
    position fixed
    text-align center
    width ((1/8) * 100)%
    padding-top 1%


#profileName
    display inline-block
    font-family 'GothamBold'
    text-align right
    font-weight bold
    color $mainColor
    width 100%
    height 50%
    padding-top 0.75%
    text-transform uppercase

.profileAction
    border-color $mainColor
    float right
    font-family 'GothamBold'
    padding: 4px 20px 4px 20px

#logOutButton
    display inline-block
    background-color $mainColor
    color $white
    border-radius 11px 0px 0px 11px

#logOutButton:hover
    background $inactiveColor
    color $mainColor

.border-left
    float right
    height 25px
    width 25px
    background-color $mainColor
    border-color $mainColor
    border-right none
    border-top-left-radius 50%
    border-bottom-left-radius 50%

.border-right
    float right
    height 25px
    width 25px
    background-color $white
    border-color $mainColor
    border-left none
    border-top-right-radius 50%
    border-bottom-right-radius 50%

#settingsButton
    background-color $white
    color $mainColor
    border-radius: 0 11px 11px 0

#settingsButton:hover
    background $inactiveColor
    color $mainColor

#profileImg
    display inline-block
    border-radius 50%

#navbar
    height 6%
    width 90%
    margin 1% 5%
    border-bottom 2px solid $inactiveColor

.nav

.navButton
    font-family 'GothamBold'
    text-transform uppercase
    text-decoration none
    color $inactiveColor
    padding-right 3%

@media all and (max-width: 325px)
    #profileImg
        height 100%
        width 100%

@media all and (min-width: 325px) and (max-width: 400px)
    #profileImg
        height 90%
        width 90%

@media all and (min-width: 400px) and (max-width: 500px)
    #profileImg
        height 85%
        width 85%

@media all and (min-width: 500px) and (max-width: 550px)
    #profileImg
        height 75%
        width 75%

@media all and (min-width: 550px) and (max-width: 575px)
    #profileImg
        height 70%
        width 70%

@media all and (min-width: 575px) and (max-width: 650px)
    #profileImg
        height 60%
        width 60%

@media all and (min-width: 650px) and (max-width: 700px)
    #profileImg
        height 55%
        width 55%

@media all and (min-width: 700px) and (max-width: 775px)
    #profileImg
        height 60%
        width 60%

@media all and (min-width: 775px) and (max-width: 850px)
    #profileImg
        height 55%
        width 55%

@media all and (min-width: 850px) and (max-width: 1000px)
    #profileImg
        height 70%
        width 70%

@media all and (min-width: 1000px) and (max-width: 1100px)
    #profileImg
        height 65%
        width 65%

@media all and (min-width: 1100px) and (max-width: 1250px)
    #profileImg
        height 55%
        width 55%

@media all and (min-width: 1250px) and (max-width: 1475px)
    #profileImg
        height 45%
        width 45%

@media all and (min-width: 1475px) and (max-width: 1700px)
    #profileImg
        height 40%
        width 40%

@media all and (min-width: 1700px)
    #profileImg
        height 35%
        width 35%

@media all and (max-width: 400px)
    .navButton
        font-size 15px
    #navbar
        height 3%
        margin-bottom 5%
    #profileName
        font-size 9.375px
    #logOutButton
        padding 1px 5px
    #settingsButton
        padding 1px 5px
    #header
        height 8%

@media all and (min-width: 400px) and (max-width: 700px)
    .navButton
        font-size 25px
    #navbar
        height 4%
    #profileName
        font-size 15.625px
    #logOutButton
        padding 1px 5px
    #settingsButton
        padding 1px 5px
    #header
        height 7%

@media all and (min-width: 700px) and (max-width: 850px)
    .navButton
        font-size 33px
    #navbar
        height 4.5%
    #profileName
        font-size 20.625px
    #logOutButton
        padding 2px 10px
    #settingsButton
        padding 2px 10px
    #header
        height 8%


@media all and (min-width: 850px)
    .navButton
        font-size 40px
    #profileName
        font-size 25px
    #logOutButton
        padding 4px 20px
    #settingsButton
        padding 4px 20px
    #header
        height 12%

@media all and (min-width: 850px) and (min-height: 850px)
    .navButton
        font-size 40px
    #navbar
        height 4%
    #profileName
        font-size 25px
    #logOutButton
        padding 4px 20px
    #settingsButton
        padding 4px 20px
    #header
        height 7%

.active
    color $mainColor

#content
    height 70%
    width 90%
    padding 5%

#footer
    height 10%
    width 100%
    position fixed
    z-index 9999
    bottom 0
    left 0
    background-color $mainColor
    font-family 'GothamBold'
    color $white

.footerButton
    display: inline-block
    width: 50%
    height: 100%
    border: none
    font-family: 'GothamBold'
    font-size: 1.5em
    text-transform: uppercase
    text-align center

@media all and (max-width: 500px)
    #footer
        height 6%
    .footerButton
        font-size 18px

@media all and (min-width: 500px) and (max-width: 800px)
    #footer
        height 7%
    .footerButton
        font-size 22px


.footerButton:focus
    outline: none

.footerButton:hover
    cursor: pointer

#buttonLeft
    background: $mainColor
    color: #fff
    width: 50%

#buttonRight
    background: #fff
    color: $mainColor
    width: 50%

#errorDiv
    height: 20%

button:hover, .submit:hover
    cursor: pointer