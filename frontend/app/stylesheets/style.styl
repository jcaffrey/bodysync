.footerButton:focus
    outline: none

.footerButton:hover
    cursor: pointer

#buttonLeft
    background: $mainColor
    color: #fff
    width: 50%

#buttonRight
    background: #fff
    color: $mainColor
    width: 50%

#errorDiv
    height: 20%

button:hover, .submit:hover
    cursor: pointer