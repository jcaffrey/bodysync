@require "helpers"

$mainColor = #2e3192
$inactiveColor = #BBB
$inactiveColor2 = #fafafa
$darkgray = #333
$white = #ffffff

text-color = #000000
mobile-width = 600px


@font-face
    font-family GothamBold
    src url(/fonts/Gotham-Bold.ttf)

@font-face
    font-family GothamLight
    src url(/fonts/Gotham-Light.ttf)

*
    margin 0
    padding 0

body
    margin 0
    padding 0
    height 100vh
    background-color $inactiveColor2

#header
    display inline-block
    height 80px
    width 100%
    background-color $white
    border-bottom $mainColor 1px solid
    position fixed
    z-index 9999

#space
    height 80px

.profile-box
    display inline-block
    padding 0
    margin 0
    height 80px
    width 100%

.profile-box-left
    display inline-block
    float right
    margin 15px 25px 0 0

.profile-box-right
    display inline-block
    text-align right
    float right

#navbar
    display inline-block
    float left
    line-height 80px
    vertical-align middle
    margin-left 25px

#navbar a.navButton.active
    vertical-align middle

#navbar a.navButton.active:hover
    cursor pointer

.navButton
    font-family 'GothamBold'
    text-transform uppercase
    text-decoration none
    color $inactiveColor
    padding 0
    height 0
    font-size 30px

#profileImg1
    display block
    border-radius 50%
    height 65px
    width 65px
    margin-top 5px
    margin-right 20px
    border 2px solid $mainColor

.inactive
    display inline-block
    font-family 'GothamBold'
    text-align center
    font-weight bold
    color $inactiveColor
    width 100%
    height 10%
    padding-top 5%
    text-transform uppercase
    font-size 2em

.active
    color $mainColor

#profileName
    display inline-block
    font-family 'GothamBold'
    text-align right
    font-weight bold
    color $mainColor
    width 100%
    height 50%
    margin-bottom 4px

.loginTitle
    display inline-block
    font-family 'GothamBold'
    text-align center
    font-weight bold
    color $mainColor
    width 100%
    height 10%
    padding-top 5%
    text-transform uppercase
    font-size 2em

#forgotPassword
    display inline-block
    font-family 'GothamBold'
    text-align center
    font-weight bold
    color $mainColor
    width 100%
    height 7%
    padding-top 5%
    text-transform uppercase
    font-size 1em

#exercisesTitle
    display inline-block
    font-family 'GothamBold'
    text-align center
    font-weight bold
    color $mainColor
    width 100%
    height 10%
    padding-top 1%
    text-transform uppercase
    font-size 2em

.exercise
    margin 3px
    width 60%


.profileAction
    border-color $mainColor
    float right
    font-family 'GothamBold'
    padding: 4px 20px 4px 20px

#logOutButton
    display inline-block
    background-color #ffffff
    color $mainColor
    border-radius 11px
    border 1px solid $mainColor
    font-size 10px
    -webkit-transition: all 0.3s;
    -moz-transition: all 0.3s;
    -ms-transition: all 0.3s;
    -o-transition: all 0.3s;
    transition: all 0.3s;

#logOutButton:hover
    background $mainColor
    color #ffffff
    -webkit-transition: all 0.3s;
    -moz-transition: all 0.3s;
    -ms-transition: all 0.3s;
    -o-transition: all 0.3s;
    transition: all 0.3s;

.border-left
    float right
    height 25px
    width 25px
    background-color $mainColor
    border-color $mainColor
    border-right none
    border-top-left-radius 50%
    border-bottom-left-radius 50%

.border-right
    float right
    height 25px
    width 25px
    background-color $white
    border-color $mainColor
    border-left none
    border-top-right-radius 50%
    border-bottom-right-radius 50%

#settingsButton
    background-color $white
    color $mainColor
    border-radius: 0 11px 11px 0

#settingsButton:hover
    background $inactiveColor
    color $mainColor

#profileImg
    display inline-block
    border-radius 50%
    vertical-align middle

#content
    height 70%
    width 90%
    padding 5%

#footer
    height 10%
    width 100%
    position fixed
    z-index 9999
    bottom 0
    left 0
    background-color $mainColor
    font-family 'GothamBold'
    color $white

.footerButton
    display: inline-block
    width: 50%
    height: 100%
    border: none
    font-family: 'GothamBold'
    font-size: 1.5em
    text-transform: uppercase
    text-align center

#buttonSubmit, #buttonTabPatient, #buttonTabPT
    display: inline-block
    height: 100%
    border: none
    font-family: 'GothamBold'
    font-size: 1.5em
    text-transform: uppercase
    text-align center

@media all and (max-width: 500px)
    #footer
        height 6%
    .footerButton, #submit
        font-size 18px

@media all and (min-width: 500px) and (max-width: 800px)
    #footer
        height 7%
    .footerButton, #submit
        font-size 22px


.footerButton, #submit:focus
    outline: none

.footerButton, #submit:hover
    cursor: pointer

#buttonLeft, #buttonTabPatient
    background: $mainColor
    color: #fff
    width: 50%

#buttonTabPatient
    border-radius: 11px 0px 0px 0px

#loginForm
    padding-top: 10%

#buttonTabPatient, #buttonTabPT
    height: 5%

#buttonTabPatient, #buttonTabPT, #buttonSubmit
    padding: 10px
    font-size: 20px

#buttonTabPT
    border-radius: 0px 11px 0px 0px

#buttonSubmit
    border-radius: 0px 0px 11px 11px
    height: 10%

#tabPT
    background-color: rgba(180,179,202,0.31)
    display: none


#buttonSubmit
    background: $mainColor
    color: #fff
    width: 100%

#buttonRight, #buttonTabPT
    background: #fff
    color: $mainColor
    width: 50%

#errorDiv
    height: 20%

button:hover, .submit:hover
    cursor: pointer

.validationError
    height 10%
    width 100%
    z-index 9999
    bottom 9%
    left 0
    background: #C1272D
    font-family 'GothamBold'
    color $white
    display block
    text-align: center

p
    padding-top: 1%

#errorContainer
    position fixed
    bottom 9%
    width 100%

.valid
    box-shadow: inset 0px 0px 5px #22B573

.invalid
    box-shadow: inset 0px 0px 5px #b5191e

@media screen and (max-width: 500px)
    #profileImg1
        display none
    #navbar a
        font-size 20px