@require "style"

$formRadius = 15px
$formWidth = 315

form
  text-align: center
  font-family: 'GothamBold'
  @media screen and (max-width: 600px)
    margin-top: 25%
  @media screen and (min-width: 601px), (max-width: 1100px)
    margin-top: 10%
  @media screen and (min-width: 1101px)
    margin-top: 0
form h1
  text-transform: uppercase
  font-size: 1.5em
  color: $inactiveColor
  text-align: left
.pt-box
  -webkit-box-shadow: 0px 0px 25px 0px rgba(0,0,0,0.75);
  -moz-box-shadow: 0px 0px 25px 0px rgba(0,0,0,0.75);
  box-shadow: 0px 0px 25px 0px $inactiveColor;
  border-radius: $formRadius
  background-color $white
  width: 95%
  @media all and (min-width: 770px)
    width: 60%
  margin 5% auto
.pic-box
  display: inline-block
  height: 50%
  width: 20%
  padding-top: 4%
.info-box
  display inline-block
  height: 100%
  width: 60%
  text-align: left
.name
  display block
  width 100%
  height 50%
  color $mainColor
  text-transform: uppercase
  font-size: 1.5em
.input-label
  display block
  width 100%
  height 50%
  font-family 'GothamLight'
  color $inactiveColor
  font-style italic
  font-size 1em
.arrow
  height 25px
  width 25px
  border-top-right-radius $formRadius
  border-bottom-right-radius $formRadius
  background-image url("https://img.clipartfest.com/f3d62c07fd977b11e30d39ef28c8f547_-add-an-up-arrow-to-select-simple-down-arrow-clipart_600-600.png")
  background-size contain
  background-repeat no-repeat
  margin-left 90%
  margin-top -50px
  padding-bottom 50px
.arrow:hover
  cursor pointer
.num-box
  display: inline-block
  height: 80%
  width: 30%
  font-weight bold
  font-size 2em
  color white
  text-align center
  margin 0
  padding-top 20%
  top 0
  vertical-align top
.plus-button
  margin: 0px auto
  -webkit-box-shadow: 0px 0px 25px 0px rgba(0,0,0,0.75);
  -moz-box-shadow: 0px 0px 25px 0px rgba(0,0,0,0.75);
  box-shadow: 0px 0px 25px 0px $inactiveColor;
  border-radius: $formRadius
  border-style: dashed
  border-color: $inactiveColor
  width: 95%
  @media all and (min-width: 770px)
    width: 60%
  height: 100%
  margin 5% auto
.plus-button:hover
  cursor: pointer
.add
  color: $inactiveColor
  padding 3%
  font-size 4em
  font-style bold
a
  text-decoration: none

.patient
  width 95%
  max-width 1080px
  margin 0 auto 1rem auto
  border default-border
  border-radius 5px
  text-align center
.patient-name
  padding-top 1rem
  font-weight bold
  font-size 1.2rem

.collapse-inner
  padding 15px