@require "style"

$formRadius = 15px
$formWidth = 315px

content
  text-align: center
  font-family: 'GothamBold'
  @media screen and (max-width: 600px)
    margin-top: 25%
  @media screen and (min-width: 601px), (max-width: 1100px)
    margin-top: 10%
  @media screen and (min-width: 1101px)
    margin-top: 0

form h1
  text-transform uppercase
  font-size 1.5em
  color $mainColor
  font-family 'GothamBold'

.patient-box
  margin 0px auto
  width 95%
  height 13%
  -webkit-box-shadow 0px 0px 25px 0px rgba(0,0,0,0.75)
  -moz-box-shadow 0px 0px 25px 0px rgba(0,0,0,0.75)
  box-shadow 0px 0px 25px 0px $inactiveColor
  border-radius $formRadius $formRadius $formRadius $formRadius
  margin-bottom 5%
  font-family 'GothamBold'

.pic-box
  display inline-block
  height 100%
  width 20%
  padding-left 4%

.info-box
  display inline-block
  height 100%
  width 76%
  text-align left

.name
  display block
  width 100%
  height 60%
  color $mainColor
  text-transform: uppercase
  font-size: 1.5em

.input-label
  display block
  width 100%
  height 40%
  font-family 'GothamLight'
  color $inactiveColor
  font-style italic
  font-size 1em


.arrow:hover
  cursor pointer

.outer-info-box
  margin: 0px auto
  -webkit-box-shadow: 0px 0px 25px 0px rgba(0,0,0,0.75);
  -moz-box-shadow: 0px 0px 25px 0px rgba(0,0,0,0.75);
  box-shadow: 0px 0px 25px 0px $inactiveColor;
  border-radius: $formRadius
  background-color $white
  width: 95%
  height 82%
  @media all and (min-width: 770px)
    width: 60%

.top-box
  background-color $mainColor
  border-radius $formRadius $formRadius 0px 0px
  color white
  font-size 180%
  display inline-block
  padding-left 4%
  padding-right 4%
  width 92%
  height 15%

.header-left
  display inline-block
  width 70%
  height 100%

.header-right
  display inline-block
  width 30%
  height 90%
  text-align right

.header-left-text
  display inline-block
  font-family 'GothamBold'
  text-transform uppercase
  text-align left
  width 80%
  margin-top 6%

#menuButton
  background-color $mainColor
  color $white
  font-family 'GothamBold'
  font-weight bold
  text-transform uppercase
  border none
  height 10%
  width 100%
  font-size 100%

#menuButton:focus
  outline none

.menu-box
  margin 0px auto
  font-family 'GothamBold'
  text-transform uppercase
  box-shadow 0px 0px 25px 0px $inactiveColor
  border-radius $formRadius $formRadius $formRadius $formRadius
  display none
  position fixed
  width 90%
  height 15%
  z-index 1

.menu-top
  font-weight bold
  font-size 180%
  background-color $mainColor
  border-radius $formRadius $formRadius 0 0
  color $white
  padding 3%
  display inline-block
  width 94%
  height 30%

.menu-title
  width 60%
  display inline-block

.exit-sign
  width 40%
  display inline-block
  text-align right

#exitButton
  background-color $mainColor
  color $white
  font-family 'GothamBold'
  font-weight bold
  text-transform uppercase
  border none
  height 100%
  width 100%
  font-size 100%

#exitButton:focus
  outline none

.menu-options
  background-color $white
  color $mainColor
  border-radius 0 0 $formRadius $formRadius
  height 120%

.menu-icon
  display none
  width 8px
  height 8px
  background $mainColor
  -moz-border-radius 50px
  -webkit-border-radius 50px
  border-radius 50px
  margin-right 3%

#iconOverview
  display inline-block

.option
  padding 2%
  font-size 100%
  text-align center
  height 20%
  background-color $white
  color $mainColor
  border-bottom solid 1px $inactiveColor

.option.four
  border-radius 0 0 $formRadius $formRadius

.bottom-box
  height 80%
  width 100%
  border-bottom none

.transition-box
  height 0%
  background-color $white
  text-align center
  position fixed
  left 40%

.icon
  display inline-block
  width 8px
  height 8px
  background $inactiveColor
  -moz-border-radius 50px
  -webkit-border-radius 50px
  border-radius 50px
  margin-right 10px
  margin-bottom 2%

#overviewBox
  display inline-block

.overview-box
  height 95%
  width 95%
  padding-left 2%
  padding-right 2%
  padding-top 2%
  padding-bottom 0%
  position relative

.body-parts
  display inline-block
  height 35%
  width 90%
  padding 0% 2%
  color $inactiveColor
  font-size 90%

.body-part-label
  display inline-block
  font-family 'GothamBold'
  text-transform uppercase
  text-align left
  font-size 138%
  color #bfbec0
  width 100%
  padding 2% 2%

.text
  width 90%
  display inline-block

#symbol
  width 10%
  display inline-block

#graph-symbol
  width 76%
  padding-left 40%

#percentValue
  margin-left 5%

.body-part
  display inline-block
  width 88%

.graph-symbol-box
  width 100%
  height 100%
  display inline-block

.exercise-set
  display inline-block
  height 35%
  width 90%
  padding 0% 5%

#exerciseTitle
  display inline-block
  margin-bottom 8%
  font-family 'GothamBold'
  text-transform uppercase
  text-align left
  color $mainColor
  font-size 90%
  margin-top 5%

.exercise-description-label
  height 30%
  -webkit-box-shadow 0px 0px 25px 0px rgba(0,0,0,0.75)
  -moz-box-shadow 0px 0px 25px 0px rgba(0,0,0,0.75)
  box-shadow 0px 0px 25px 0px $inactiveColor
  border-radius $formRadius $formRadius $formRadius $formRadius

#exerciseText
  display inline-block
  font-family 'GothamBold'
  text-transform uppercase
  text-align center
  color $mainColor
  width 100%
  margin 3% 0%
  font-size 90%

.notes
  display inline-block
  height 30%
  width 90%
  padding 0% 5%
  outline none
  @media screen and (min-width: 770px)
    font-size: 2vw
    padding: 20px
  @media screen and (min-width: 1700px)
    font-size: 1.5vw
    padding: 25px
    border-bottom: solid 1px $inactiveColor

#noteTitle
  display inline-block
  font-family 'GothamBold'
  text-transform uppercase
  text-align left
  color $mainColor
  font-size 90%
  width 80%
  margin-bottom 2%

.note-input
  position relative
  width 100%
  height 65%
  text-align left
  color $inactiveColor
  font-size 4vw
  font-family 'GothamLight'
  background none
  border none
  resize none

#notes:focus
  outline none

#bodyBox
  display none

.body-part-box
  height 100%
  width 100%
  font-family 'GothamBold'
  text-transform uppercase
  text-align center
  color $mainColor

#percentage
  color orange
  font-size 150%
  margin 3% 0%

.percentage-box
  height 8%

.recovery-box
  height 5%

#recoveryText
  font-size 80%
  color $inactiveColor
  margin-bottom 3%

#iconOverviewTrans
  background $mainColor

.graph-box
  width 100%
  height 87%

.svgh
  height 100%
  width 100%

path
  stroke $mainColor
  stroke-width 3
  fill none

.axis
  stroke $mainColor
  font-family 'Gotham'
  shape-rendering crispEdges

.x.axis line, .y.axis line
  display none


.x.axis path
  stroke $mainColor
  stroke-width 1

.y.axis path
  display none

.line2 path
  stroke $mainColor
  gradient webkit-gradient(radial, 50% 50%, 0, 50% 50%, 350, from(#000), to(#fff));

.circles
  stroke $mainColor
  fill $white
  stroke-width 3

.horizontalLine
  stroke $inactiveColor
  stroke-width 2
  stroke-dasharray 10 10