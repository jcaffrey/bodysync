@require "style"

$formRadius = 15px
$formWidth = 315px

content
  text-align: center
  font-family: 'GothamBold'
  overflow-y auto
  @media screen and (min-width: 400px)
      height 10%
  @media screen and (max-width: 600px)
    margin-top: 25%
  @media screen and (min-width: 601px), (max-width: 1100px)
    margin-top: 10%
  @media screen and (min-width: 1101px)
    margin-top: 0

form h1
  text-transform uppercase
  font-size 1.5em
  color $mainColor
  font-family 'GothamBold'

.pt-box
  margin: 5% auto
  -webkit-box-shadow: 0px 0px 25px 0px rgba(0,0,0,0.75);
  -moz-box-shadow: 0px 0px 25px 0px rgba(0,0,0,0.75);
  box-shadow: 0px 0px 25px 0px $inactiveColor;
  border-radius: $formRadius
  width: 95%
  @media all and (min-width: 770px)
    width 60%
    margin-top 0%

.pic-box
  display: inline-block
  width: 25%
  text-align: left
  padding: 3% 2% 3% 3%
.info-box
  display inline-block
  width: 55%
  text-align: left
  vertical-align: middle
  padding: 0
  @media screen and (min-width: 501px)
    width: 55%
  @media screen and (max-width: 500px)
    width: 50%
.name
  font-family 'GothamBold'
  display block
  vertical-align: bottom
  width 100%
  height 45%
  color $mainColor
  text-transform: uppercase
  font-size: 4vw
  height: 40%
  padding-top: 1%
  padding-bottom: 1%

.recovery-box
  padding-top: 1%
  padding-bottom: 1%
  vertical-align: top

.percent1
  display: inline-block
  vertical-align: middle
  font-family: 'GothamBold'
  color: #1A924C
  font-size: 3.5vw
  width: 15%
.percent2
  display: inline-block
  vertical-align: middle
  font-family: 'GothamBold'
  color #801a00
  font-size: 3.5vw
  width: 15%

hr
  border-style: dashed
  color: $inactiveColor

#upIcon
  position: absolute
  z-index: 1000
  @media screen and (min-width: 0px) and (max-width: 499px)
    margin: 13% 0% 0% -6%
    width: 7%
  @media screen and (min-width: 500px) and (max-width: 769px)
    margin: 10% 0% 0% -5%
    width: 6%
  @media screen and (min-width: 770px) and (max-width: 999px)
    margin: 5.5% 0% 0% -3.5%
    width: 3.5%
  @media screen and (min-width: 1000px) and (max-width: 1099px)
    margin: 6% 0% 0% -3.5%
    width: 3.5%
  @media screen and (min-width: 1100px) and (max-width: 1200px)
    margin: 6% 0% 0% -3.5%
    width: 3.5%
  @media screen and (min-width: 1100px)
    margin: 5% 0% 0% -2.5%
    width: 3%
    float: right

#downIcon
  position: absolute
  z-index: 1000
  @media screen and (min-width: 0px) and (max-width: 499px)
    margin: 13% 0% 0% -6%
    width: 7%
  @media screen and (min-width: 500px) and (max-width: 769px)
    margin: 10% 0% 0% -5%
    width: 6%
  @media screen and (min-width: 770px) and (max-width: 999px)
    margin: 5.5% 0% 0% -3.5%
    width: 3.5%
  @media screen and (min-width: 1000px) and (max-width: 1099px)
    margin: 6% 0% 0% -3.5%
    width: 3.5%
  @media screen and (min-width: 1100px) and (max-width: 1200px)
    margin: 6% 0% 0% -3.5%
    width: 3.5%
  @media screen and (min-width: 1100px)
    margin: 5% 0% 0% -2.5%
    width: 3%
    float: right

#profileImg
  position: relative
  z-index: 20
  vertical-align: middle
  padding: 0

.recovery
  display: inline-block
  font-family: 'GothamLight'
  color: $inactiveColor
  text-transform: uppercase
  vertical-align: middle
  font-size: 2.5vw
  @media screen and (min-width: 100px)
    padding-left: 5%
  @media screen and (min-width: 300px)
    padding-left: 6%
  @media screen and (min-width: 500px)
    padding-left: 3%
  @media screen and (min-width: 770px)
    padding-left: 12%

.outer-info-box
  margin: 0px auto
  -webkit-box-shadow: 0px 0px 25px 0px rgba(0,0,0,0.75);
  -moz-box-shadow: 0px 0px 25px 0px rgba(0,0,0,0.75);
  box-shadow: 0px 0px 25px 0px $inactiveColor;
  border-radius: $formRadius
  background-color $white
  width: 95%
  height 75%
  @media all and (min-width: 770px)
    width: 60%

.top-box
  background-color $mainColor
  border-radius $formRadius $formRadius 0px 0px
  color white
  font-size 6vw
  @media screen and (min-width: 770px)
    font-size: 4vw
  @media screen and (min-width: 1700px)
    font-size: 3vw
  display inline-block
  padding-left 4%
  padding-right 4%
  width 92%
  height 10%
  @media screen and (min-width: 300px)
    height 18%
  @media screen and (max-width 500px) and (max-height 700px)
    height 13%
  @media screen and (min-width: 650px)
    height 19%
  @media screen and (min-width: 770px)
    height 18%
  @media screen and (min-width: 1000px)
    height 17%
  @media screen and (min-width: 1400px)
    height 20%

.header-left
  display inline-block
  width 70%
  height 100%

.header-right
  display inline-block
  width 30%
  height 100%
  text-align right

.header-left-text
  display inline-block
  font-family 'GothamBold'
  text-transform uppercase
  text-align left
  width 80%
  margin-top 6%

#menuButton
  background-color $mainColor
  color $white
  font-family 'GothamBold'
  font-weight bold
  text-transform uppercase
  border none
  height 10%
  width 100%
  font-size 6vw
  @media screen and (min-width: 770px)
    font-size: 4vw
  @media screen and (min-width: 1700px)
    font-size: 3vw

#menuButton:focus
  outline none

.menu-box
  margin 0px auto
  font-family 'GothamBold'
  text-transform uppercase
  box-shadow 0px 0px 25px 0px $inactiveColor
  border-radius $formRadius $formRadius $formRadius $formRadius
  display none
  position fixed
  width: 90%
  text-align: left
  vertical-align: middle
  margin: 0% auto
  @media screen and (min-width: 450px)
    height 13%
  @media screen and (min-width: 770px)
    top 40%
    left 23%
    width: 54%
  @media screen and (min-width: 1400px)
    top 53%
    width 54%
    left 23%
  z-index 1

.menu-top
  font-weight bold
  font-size 6vw
  @media screen and (min-width: 770px)
    font-size: 3vw
  @media screen and (min-width: 1700px)
    font-size: 2vw
  background-color $mainColor
  border-radius $formRadius $formRadius 0 0
  color $white
  padding 3%
  display inline-block
  width 94%
  height 30%

.menu-title
  width 60%
  display inline-block

.exit-sign
  width 40%
  display inline-block
  text-align right

#exitButton
  background-color $mainColor
  color $white
  font-family 'GothamBold'
  font-weight bold
  text-transform uppercase
  border none
  height 100%
  width 100%
  font-size 100%

#exitButton:focus
  outline none

.menu-options
  background-color $white
  color $mainColor
  border-radius 0 0 $formRadius $formRadius
  height 120%
  font-size 4vw
  @media screen and (min-width: 770px)
    font-size: 2vw
  @media screen and (min-width: 1700px)
    font-size: 1vw

.menu-icon
  display none
  width 8px
  height 8px
  background $mainColor
  -moz-border-radius 50px
  -webkit-border-radius 50px
  border-radius 50px
  margin-right 3%

#iconOverview
  display inline-block

.option
  padding 2%
  font-size 100%
  text-align center
  height 20%
  background-color $white
  color $mainColor
  border-bottom solid 1px $inactiveColor

.option.four
  border-radius 0 0 $formRadius $formRadius

.bottom-box
  height 80%
  width 100%
  border-bottom none

.transition-box
  height 0%
  background-color $white
  text-align center
  position fixed
  left 40%
  @media screen and (min-width 650px)
    left 43%
  @media screen and (min-width: 770px)
    left 45%

.icon
  display inline-block
  width 8px
  height 8px
  background $inactiveColor
  -moz-border-radius 50px
  -webkit-border-radius 50px
  border-radius 50px
  margin-right 10px
  margin-bottom 2%

#overviewBox
  display inline-block

.overview-box
  height 95%
  width 95%
  padding-left 2%
  padding-right 2%
  padding-top 2%
  padding-bottom 0%
  position relative


.collapse-inner
  display inline-block
  padding: 0.5%
  width: 100%
  font-family 'GothamBold'

.collapse
  height: auto !important
  width: 100%
  overflow hidden

.graph-box
  width: 10%
  padding-right: 5%
  display: inline-block
  text-align: right

#graph-symbol
  display inline-block
  width: 50%
  height: auto
  vertical-align: sub

.input-label
  display: inline-block
  font-family: 'GothamBold'
  color $inactiveColor
  text-transform: uppercase
  text-align: left
  font-size: 4vw
  @media screen and (min-width: 770px)
    font-size: 2.5vw
  @media screen and (min-width: 1700px)
    font-size: 1vw
  padding-left: 5%
  padding-bottom 2%
  @media screen and (max-width 650px and max-height 600px)
    padding-bottom 5%
  width: 68%

.input-percent1
  display: inline-block
  font-size: 4vw
  @media screen and (min-width: 770px)
    font-size: 2.5vw
  @media screen and (min-width: 1700px)
    font-size: 1vw
  color #22B573
  width: 12%

.input-percent2
  display: inline-block
  font-size: 4vw
  @media screen and (min-width: 770px)
    font-size: 2.5vw
  @media screen and (min-width: 1700px)
    font-size: 1vw
  color #f4b342
  width: 12%

.input-percent3
  display: inline-block
  font-size: 4vw
  @media screen and (min-width: 770px)
    font-size: 2.5vw
  @media screen and (min-width: 1700px)
    font-size: 1vw
  color #801a00
  width: 12%

.exercise-set
  display inline-block
  height 35%
  width 90%
  padding 0% 5%
  @media screen and (min-width: 650px)
    height 30%

#exerciseTitle
  display inline-block
  margin-bottom 4%
  font-family 'GothamBold'
  text-transform uppercase
  text-align left
  color $mainColor
  font-size 4vw
  @media screen and (min-width: 770px)
    font-size: 2.8vw
    margin-bottom 6%
  @media screen and (min-width: 1700px)
    font-size: 1.5vw
  margin-top 3%

.exercise-description-label
  height 25%
  -webkit-box-shadow 0px 0px 25px 0px rgba(0,0,0,0.75)
  -moz-box-shadow 0px 0px 25px 0px rgba(0,0,0,0.75)
  box-shadow 0px 0px 25px 0px $inactiveColor
  border-radius $formRadius $formRadius $formRadius $formRadius
  @media screen and (min-width: 650px)
    height 40%

#exerciseText
  display inline-block
  font-family 'GothamBold'
  text-transform uppercase
  text-align center
  color $mainColor
  width 100%
  margin 2% 0%
  font-size 3vw
  @media screen and (min-width: 770px)
    margin-top 3%
    font-size: 2.2vw
  @media screen and (min-width: 1700px)
    font-size: 1vw

.notes
  display inline-block
  height 30%
  width 90%
  padding 0% 5%
  outline none
  @media screen and (min-width: 770px)
    height 40%

#noteTitle
  display inline-block
  font-family 'GothamBold'
  text-transform uppercase
  text-align left
  color $mainColor
  width 80%
  margin-top 1%
  margin-bottom 1%
  font-size 4vw
  @media screen and (min-width: 770px)
    font-size: 2.8vw
  @media screen and (min-width: 1700px)
    font-size: 1.5vw

.note-input
  position relative
  width 100%
  height 65%
  text-align left
  color $inactiveColor
  font-size 4vw
  @media screen and (min-width: 770px)
    font-size: 2vw
  @media screen and (min-width: 1700px)
    font-size: 1vw
  font-family 'GothamLight'
  background none
  border none
  resize none

#notes:focus
  outline none

#bodyBox
  display none

.body-part-box
  height 100%
  width 100%
  font-family 'GothamBold'
  text-transform uppercase
  text-align center
  color $mainColor

#percentage
  color orange
  font-size 150%
  margin 3% 0%

.percentage-box
  height 8%

.recovery-box
  height 5%

#recoveryText
  font-size 80%
  color $inactiveColor
  margin-bottom 3%

#iconOverviewTrans
  background $mainColor

.graph-view
  width 100%
  height 87%

.svgh
  height 80%
  width 100%

path
  stroke $mainColor
  stroke-width 3
  fill none

.axis
  stroke $mainColor
  font-family 'Gotham'
  shape-rendering crispEdges

.x.axis line, .y.axis line
  display none

.x.axis path, .y.axis path
  stroke $mainColor
  stroke-width 3

.circles
  stroke $mainColor
  fill $white
  stroke-width 3

.goal-point
  stroke #21bb45
  fill $white
  stroke-width 3

.horizontalLine
  stroke linear-gradient(red, yellow)
  stroke-width 3
  stroke-dasharray 10 10

.goal
  font-family "Gotham-Bold"
  fill $mainColor

.goalCircle
  stroke $mainColor
  fill $white
  stroke-width 3
