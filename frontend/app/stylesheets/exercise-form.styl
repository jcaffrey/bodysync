@require "style"

$formRadius = 15px
$formWidth = 315

form
  font-family: 'GothamBold'
  @media screen and (max-width: 600px)
    margin-top: 1%
  @media screen and (min-width: 601px), (max-width: 1100px)
    margin-top: 0.5%
  @media screen and (min-width: 1101px)
    margin-top: 0
  padding-bottom: 10%
form h1
  text-transform: uppercase
  font-size: 1.5em
  color: $inactiveColor
  text-align: left

#applyTemplate
  border-style none
  font-family GothamBold
  font-size 4vw
  text-transform uppercase
  color $white
  background-color $mainColor
  border-radius 20px
  border-color $mainColor
  padding: 1.5% 10%
  display block
  margin 0px auto 
#applyTemplate:hover
  cursor: pointer

.inputs
  margin: 0px auto
  -webkit-box-shadow: 0px 0px 25px 0px rgba(0,0,0,0.75);
  -moz-box-shadow: 0px 0px 25px 0px rgba(0,0,0,0.75);
  box-shadow: 0px 0px 25px 0px $inactiveColor;
  border-radius: $formRadius
  width: 95%
  @media all and (min-width: 770px)
    width: 60%

.input-box
  padding: 20px
  outline: none
  border: none
  text-align: right
  font-size: 4vw
  @media screen and (min-width: 770px)
    font-size: 2vw
    padding: 20px
  @media screen and (min-width: 1700px)
    font-size: 1.5vw
    padding: 25px
  border-bottom: solid 1px $inactiveColor
  //width: ($formWidth - 40)px
form input::-webkit-input-placeholder
  color: $inactiveColor
  font-style: italic
  font-size: 4vw
  @media screen and (min-width: 770px)
    font-size: 2vw
  @media screen and (min-width: 1700px)
    font-size: 1.5vw
form input:focus
  outline: none

.input-top
  border-top-right-radius: $formRadius
  border-top-left-radius: $formRadius
.input-bottom
  border-bottom-right-radius: $formRadius
  border-bottom-left-radius: $formRadius
  border-bottom: none

.repset-name
  font-family: 'GothamBold'
  font-weight: bold
  text-transform: uppercase
  color: $mainColor
  text-align: left
  float: left
  position relative
  text-decoration: none
  width: 40%
  display inline-block

.repset-box
  width: 60%
  display inline-block

.arith-box
  width: 20%
  text-align center
  display inline-block
  color $mainColor
  font-size 6vw
  font-family 'GothamBold'
  border none
  background-color $inactiveColor2

.num-box
  width: 20%
  text-align center
  display inline-block
  color $mainColor
  text-decoration underline
  font-size 6vw
  font-family 'GothamBold'
  
.input-name
  font-family: 'GothamBold'
  font-weight: bold
  text-transform: uppercase
  color: $mainColor
  text-align: left
  float: left
  position relative
  text-decoration: none
.input-name:before
  content: ""
  position: absolute
  width: 100%
  height: 2px
  bottom: 0
  left: 0
  background-color: $mainColor
  visibility: hidden
  -webkit-transform: scaleX(0)
  transform: scaleX(0)
  -webkit-transition: all 0.3s ease-in-out 0s
  transition: all 0.3s ease-in-out 0s

.text-input
  position relative
  width 50%
  text-align right
  //float right
  color $darkgray
  background none
  border none
  font-size: 4vw
  @media screen and (min-width: 770px)
    font-size: 2vw
  @media screen and (min-width: 1700px)
    font-size: 1.5vw

.text-input:focus + .input-name:before
  visibility: visible
  -webkit-transform: scaleX(1)
  transform: scaleX(1)

.input-name + input
    margin-top 10px
.input-name#notes
    text-align: left
form textarea.text-input
    resize: none
    outline: none
    font-size: 3.5vw
    @media screen and (min-width: 770px)
        font-size: 1.5vw
    @media screen and (min-width: 1700px)
        font-size: 1vw
    width 100%
    text-align left
