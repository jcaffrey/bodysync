@require "style"

$formRadius = 20px

$formWidth 95%
$formWidthW 50%

form
    text-align: center
    font-family: 'GothamBold'
    @media screen and (min-width: 770px)
        margin-top: -30px
form h2
    text-transform: uppercase
    text-align: left
    font-size: 4vw
    padding-bottom: 10px
    color: $inactiveColor
    @media screen and (min-width: 770px)
        font-size: 2vw
        padding-bottom: 10px
    @media screen and (min-width: 1700px)
        font-size: 1.5vw

.inputs
    margin: 0px auto
    -webkit-box-shadow: 0px 0px 25px 0px rgba(0,0,0,0.75);
    -moz-box-shadow: 0px 0px 25px 0px rgba(0,0,0,0.75);
    box-shadow: 0px 0px 25px 0px $inactiveColor;
    border-radius: $formRadius
    width: 95%
    @media all and (min-width: 770px)
        width: 60%

.input-box
    padding: 20px
    outline: none
    border-bottom: solid 1px $inactiveColor
    text-align: right
    font-size: 4vw
    @media screen and (min-width: 770px)
        font-size: 2vw
        padding: 20px
    @media screen and (min-width: 1700px)
        font-size: 1.5vw
        padding: 25px
        border-bottom: solid 1px $inactiveColor

#rom-add
    border-top 2px dashed $inactiveColor
    text-align center
    text-transform uppercase
    color $inactiveColor
    transition 0.3s
    cursor pointer
#rom-add:hover
    background-color #EEE
    
form input::-webkit-input-placeholder
    color: $inactiveColor
    font-style: italic
    font-size: 4vw
    font-family: 'GothamLight'
    @media screen and (min-width: 770px)
        font-size: 2vw
    @media screen and (min-width: 1700px)
        font-size: 1.5vw
form input:focus
    outline: none
.text-input
    font-family 'GothamBold'
    color $mainColor
    position relative
    width 50%
    text-align right
    background none
    border none
    font-size: 4vw
    @media screen and (min-width: 770px)
        font-size: 2vw
    @media screen and (min-width: 1700px)
        font-size: 1.5vw
.text-input.notes
    text-align: left
    width: 100%

form h2.rom-box
    text-align: center
.rom1
    float: left
    text-align: left
    width: 50%
.rom2
    height: 100%
    width: 100%
    text-align: right
.rom-input
    position relative
    text-align left
    color $darkgray
    background none
    border none
    font-size 4vw
    @media screen and (min-width: 770px)
        font-size: 2vw
    @media screen and (min-width: 1700px)
        font-size: 1.5vw
.rom-label
    font-size 3vw
    color $mainColor
    text-transform uppercase
    @media screen and (min-width: 770px)
        font-size: 1.25vw
    @media screen and (min-width: 1700px)
        font-size: 1vw
.rom-label + input
    margin-top 10px
.rom-label#notes
    text-align: left
form textarea.text-input
    resize: none
    outline: none
    font-size: 3.5vw
    @media screen and (min-width: 770px)
        font-size: 1.5vw
    @media screen and (min-width: 1700px)
        font-size: 1vw
    height: 70px

.input-box:first-child
    border-top-right-radius: $formRadius
    border-top-left-radius: $formRadius
.input-bottom:last-child
    border-bottom-right-radius: $formRadius
    border-bottom-left-radius: $formRadius
    border-bottom none

.input-name
    font-family: 'GothamBold'
    font-weight: bold
    text-transform: uppercase
    color: $mainColor
    text-align: left
    float: left
    position relative
    text-decoration: none
.input-name:before
    content: ""
    position: absolute
    width: 100%
    height: 2px
    bottom: 0
    left: 0
    background-color: $mainColor
    visibility: hidden
    -webkit-transform: scaleX(0)
    transform: scaleX(0)
    -webkit-transition: all 0.3s ease-in-out 0s
    transition: all 0.3s ease-in-out 0s
.text-input:focus + .input-name:before
    visibility: visible
    -webkit-transform: scaleX(1)
    transform: scaleX(1)

.input-name span
    display: block
    margin-bottom: 3px

.input-name.two
    color: $white


.input-name.two:before
    background-color: $white

form img
    border-radius: 50%
    height: 10%
    width: 10%
    margin-top: -7px
    @media screen and (min-width: 770px)
        height: 7.5%
        width: 7.5%
    @media screen and (min-width: 1700px)
        height: 5%
        width: 5%
.input-label
    font-family: 'GothamLight'
    color: $darkgray
    font-size: 2vw
    @media screen and (min-width: 770px)
        font-size: 1vw
    @media screen and (min-width: 1700px)
        font-size: 0.65vw
        text-transform: uppercase
        font-style: italic

.pt-button
    display: inline-block
    width: 50%
    height: 100%
    border: none
    font-family: 'GothamBold'
    font-size: 3.5vw
    text-transform: uppercase
.pt-button:focus
    outline: none
.pt-button:hover
    cursor: pointer
.button-1
    background: $mainColor
    color: #fff
.button-2
    background: #fff
    color: $mainColor

.rom-name-input
    width 100%
    font-weight bold
    text-align left
    font-style normal
    color $mainColor
    margin-bottom 10px

#tabPatient
    color $white


