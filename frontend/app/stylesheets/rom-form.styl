@require "style"

$formRadius = 15px
$formWidth = 315

form
  text-align: center
  font-family: 'GothamBold'

form h1
  text-transform: uppercase
  font-size: 1.5em
  color: $mainColor

.inputs
  margin: 0px auto
  -webkit-box-shadow: 0px 0px 25px 0px rgba(0,0,0,0.75);
  -moz-box-shadow: 0px 0px 25px 0px rgba(0,0,0,0.75);
  box-shadow: 0px 0px 25px 0px $inactiveColor;
  border-radius: $formRadius
  width: $formWidth px
  background-color $white

.input-box
  display: -webkit-flex;
  display: flex;
  -webkit-flex-direction: row;
  flex-direction: row;
  border-width: $formWidth px
  border-top: 1px solid $inactiveColor

.input-box-top
  display: -webkit-flex;
  display: flex;
  -webkit-flex-direction: row;
  flex-direction: row;

.input-name
  font-family: 'GothamBold'
  font-weight: bold
  text-transform: uppercase
  color: $mainColor
  text-align: left
  margin: 20px
  margin-left: 20px

ul
  display: flex;
  flex-direction: row
  width: 50%

.rd-num-button
  width: 60%
  height: 100%
  border: none
  font-family: 'GothamBold'
  font-size: 0.8em
  background: $mainColor
  margin: 0% 1% 1% 0%
  color: #fff
.num-button:focus
  outline: none
.num-button:hover
  cursor: pointer

.sets-num-button
  width: 30%
  height: 100%
  border: none
  font-family: 'GothamBold'
  font-size: 0.8em
  background: $mainColor
  margin: 0% 1% 1% 0%
  color: #fff
.num-button:focus
  outline: none
.num-button:hover
  cursor: pointer

.rd-arith-box
  height: 50%
  width: 80%

.sets-arith-box
  height: 102%
  width: 80%
  display: flex;
  flex-direction: column;

form input
  padding: 20px
  text-align: left
  width: ($formWidth - 40)px
form input::-webkit-input-placeholder
  color: $darkgray
  font-style: italic
form input:focus
  outline: none

.form-input
  width: calc(100% - 40px)
  border-bottom: 1px solid $inactiveColor
  margin: 0px 20px 0px 20px
  //border-bottom-right-radius: $formRadius
  //border-bottom-left-radius: $formRadius
  font-size 1em
  border: none
.form-input:focus
  outline none

.media-button-box
  display: flex;
  flex-direction: row;
  border-width: $formWidth px
  margin: 0 auto
  padding-bottom: 100px
  width: 75%
  height: 85%
  border: none
  font-family: 'GothamBold'
  font-size: 0.8em
  text-transform: uppercase
  color $mainColor
  background-color $white
  border-right none
  box-shadow: 0px 0px 25px 0px $inactiveColor;
  border-radius: $formRadius
  padding 4px 4px 4px 4px
  text-align center
.media-button:focus
  outline: none
.media-button:hover
  cursor: pointer

.pt-button
  width: 50%
  height: 100%
  border: none
  font-family: 'GothamBold'
  font-size: 1.5em
  text-transform: uppercase
.pt-button:focus
  outline: none
.pt-button:hover
  cursor: pointer
.button-1
  background: $mainColor
  color: #fff
.button-2
  background: #fff
  color: $mainColor