@require "style"

$formRadius = 20px
$formWidth = 95%

form
  text-align: center
  font-family: 'GothamBold'

form h1
  text-transform: uppercase
  font-size: 5vw
  color: $mainColor
  padding-bottom: 30px

.inputs
  margin: 0px auto
  -webkit-box-shadow: 0px 0px 25px 0px rgba(0,0,0,0.75);
  -moz-box-shadow: 0px 0px 25px 0px rgba(0,0,0,0.75);
  box-shadow: 0px 0px 25px 0px $inactiveColor;
  border-radius: $formRadius
  width: $formWidth

.input-box
  padding: 40px
  outline: none
  border: none
  text-align: right
  font-size: 4vw
  border-bottom: solid 1px $inactiveColor
  //width: ($formWidth - 40)px
form input::-webkit-input-placeholder
  color: $inactiveColor
  font-style: italic
  font-size: 4vw
form input:focus
  outline: none
.text-input
  width 50%
  text-align right
  color $darkgray
  background none
  border none
  font-size: 4vw
   
.input-top
  border-top-right-radius: $formRadius
  border-top-left-radius: $formRadius
.input-bottom
  border-bottom-right-radius: $formRadius
  border-bottom-left-radius: $formRadius
  border-bottom: none

.input-name
  font-family: 'GothamBold'
  font-weight: bold
  text-transform: uppercase
  color: $mainColor
  text-align: left
  position: absolute

.input-name span
  display: block
  margin-bottom: 3px

.input-label
  font-family: 'GothamLight'
  color: $darkgray
  font-size: 2vw
  text-transform: uppercase
  font-style: italic

.pt-button
  display: inline-block
  width: 50%
  height: 100%
  border: none
  font-family: 'GothamBold'
  font-size: 3.5vw
  text-transform: uppercase
.pt-button:focus
  outline: none
.pt-button:hover
  cursor: pointer
.button-1
  background: $mainColor
  color: #fff
.button-2
  background: #fff
  color: $mainColor