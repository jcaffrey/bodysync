@require "style"

$formRadius = 15px
$formWidth = 315

form
  text-align: center
  font-family: 'GothamBold'

form h1
  text-transform: uppercase
  font-size: 1.5em
  color: $mainColor

.inputs
  margin: 0px auto
  -webkit-box-shadow: 0px 0px 25px 0px rgba(0,0,0,0.75);
  -moz-box-shadow: 0px 0px 25px 0px rgba(0,0,0,0.75);
  box-shadow: 0px 0px 25px 0px $inactiveColor;
  border-radius: $formRadius
  width: $formWidth px

.input-box
  padding: 20px
  outline: none
  border: none
  text-align: right
  font-size: 15px
  border-bottom: solid 1px $inactiveColor
  width: ($formWidth - 40)px
form input::-webkit-input-placeholder
  color: $inactiveColor
  font-style: italic
form input:focus
  outline: none
.text-input
   width 50%
   text-align right
   color $darkgray
   background none
   border none
   
.input-top
  border-top-right-radius: $formRadius
  border-top-left-radius: $formRadius
.input-bottom
  border-bottom-right-radius: $formRadius
  border-bottom-left-radius: $formRadius
  border-bottom: none

.input-name
  font-family: 'GothamBold'
  font-weight: bold
  text-transform: uppercase
  color: $mainColor
  text-align: left
  position: absolute

.input-name span
  display: block
  margin-bottom: 3px

.input-label
  font-family: 'GothamLight'
  color: $darkgray
  font-size: 0.5em
  text-transform: uppercase
  font-style: italic

.pt-button
  display: inline-block
  width: 50%
  height: 100%
  border: none
  font-family: 'GothamBold'
  font-size: 1.5em
  text-transform: uppercase
.pt-button:focus
  outline: none
.pt-button:hover
  cursor: pointer
.button-1
  background: $mainColor
  color: #fff
.button-2
  background: #fff
  color: $mainColor

.validationError
  height 0%
  width 100%
  z-index 9999
  bottom 10%
  left 0
  background: #C1272D
  font-family 'GothamBold'
  color $white
  display block
  text-align: center

p
  padding-top: 1%

#errorContainer
  position fixed
  bottom 10%
  width 100%