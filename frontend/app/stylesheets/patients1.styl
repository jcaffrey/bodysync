@require "style"

$formRadius = 15px
$formWidth = 315

form
  font-family: 'GothamBold'
  @media screen and (max-width: 600px)
    margin-top: 1%
  @media screen and (min-width: 601px), (max-width: 1100px)
    margin-top: 0.5%
  @media screen and (min-width: 1101px)
    margin-top: 0
  padding-bottom: 10%
form h1
  text-transform: uppercase
  font-size: 1.5em
  color: $inactiveColor
  text-align: left
.pt-box
  margin: 5% auto
  -webkit-box-shadow: 0px 0px 25px 0px rgba(0,0,0,0.75);
  -moz-box-shadow: 0px 0px 25px 0px rgba(0,0,0,0.75);
  box-shadow: 0px 0px 25px 0px $inactiveColor;
  border-radius: $formRadius
  width: 95%
  @media all and (min-width: 770px)
      width: 60%
.pic-box
  display: inline-block
  width: 25%
  text-align: left
  padding: 3% 0 3% 3%
.info-box
  display inline-block
  width: 55%
  text-align: left
  vertical-align: middle
  padding: 0
  @media screen and (min-width: 501px)
    width: 55%
  @media screen and (max-width: 500px)
    width: 50% 
.name
  display block
  vertical-align: middle
  width 100%
  height 45%
  color $mainColor
  text-transform: uppercase
  font-size: 4vw
  height: 40%
  padding-top: 1%
  padding-bottom: 1%
  
.recovery-box
  padding-top: 1%
  padding-bottom: 1%
  vertical-align: middle
  
.percent1
  display: inline-block
  vertical-align: middle
  font-family: 'GothamBold'
  color: #1A924C
  font-size: 3.5vw
  width: 15%
.percent2
  display: inline-block
  vertical-align: middle
  font-family: 'GothamBold'
  color #801a00
  font-size: 3.5vw
  width: 15%
hr
  border-style: dashed
  color: $inactiveColor
#upIcon
  position: absolute
  z-index: 1000
  @media screen and (min-width: 0px) and (max-width: 499px)
    margin: 13% 0% 0% -6%
    width: 7%
  @media screen and (min-width: 500px) and (max-width: 769px)
    margin: 10% 0% 0% -5%
    width: 6%
  @media screen and (min-width: 770px) and (max-width: 999px)
    margin: 5.5% 0% 0% -3.5%
    width: 3.5%
  @media screen and (min-width: 1000px) and (max-width: 1099px)
    margin: 6% 0% 0% -3.5%
    width: 3.5%
  @media screen and (min-width: 1100px) and (max-width: 1200px)
    margin: 6% 0% 0% -3.5%
    width: 3.5%
  @media screen and (min-width: 1100px)
    margin: 5% 0% 0% -2.5%
    width: 3%
  float: right
#downIcon
  position: absolute
  z-index: 1000
  @media screen and (min-width: 0px) and (max-width: 499px)
    margin: 13% 0% 0% -6%
    width: 7%
  @media screen and (min-width: 500px) and (max-width: 769px)
    margin: 10% 0% 0% -5%
    width: 6%
  @media screen and (min-width: 770px) and (max-width: 999px)
    margin: 5.5% 0% 0% -3.5%
    width: 3.5%
  @media screen and (min-width: 1000px) and (max-width: 1099px)
    margin: 6% 0% 0% -3.5%
    width: 3.5%
  @media screen and (min-width: 1100px) and (max-width: 1200px)
    margin: 6% 0% 0% -3.5%
    width: 3.5%
  @media screen and (min-width: 1100px)
    margin: 5% 0% 0% -2.5%
    width: 3%
  float: right
#profileImg
  position: relative
  z-index: 20
  vertical-align: middle
  padding: 0
.recovery
  display: inline-block
  font-family: 'GothamLight'
  color: $inactiveColor
  text-transform: uppercase
  vertical-align: middle
  font-size: 2.5vw
  @media screen and (min-width: 100px)
    padding-left: 1.5%
  @media screen and (min-width: 300px)
    padding-left: 2%
  @media screen and (min-width: 500px)
    padding-left: 3%
  @media screen and (min-width: 770px)
    padding-left: 12%
.input-label
  display: inline-block
  font-family: 'GothamBold'
  color $inactiveColor
  text-transform: uppercase
  text-align: left
  font-size: 4vw
  @media screen and (min-width: 770px)
    font-size: 2vw
  @media screen and (min-width: 1700px)
    font-size: 1vw
  padding-left: 5%
  width: 68%
.input-percent1
  display: inline-block
  font-size: 4vw
  @media screen and (min-width: 770px)
    font-size: 2vw
  @media screen and (min-width: 1700px)
    font-size: 1vw
  color #22B573
  width: 12%
.input-percent2
  display: inline-block
  font-size: 4vw
  @media screen and (min-width: 770px)
    font-size: 2vw
  @media screen and (min-width: 1700px)
    font-size: 1vw
  color #f4b342
  width: 12%
.input-percent3
  display: inline-block
  font-size: 4vw
  @media screen and (min-width: 770px)
    font-size: 2vw
  @media screen and (min-width: 1700px)
    font-size: 1vw
  color #801a00
  width: 12%
.arrow
  display inline-block
  width 10%
  color: $mainColor
  background-size contain
  background-repeat no-repeat
  font-size: 4vw
  vertical-align: middle
.arrow:hover
  cursor pointer
.num-box
  display: inline-block
  height: 80%
  width: 30%
  font-weight bold
  font-size 2em
  color white
  text-align center
  margin 0
  padding-top 20%
  top 0
  vertical-align top
.plus-button
  margin: 5% auto
  -webkit-box-shadow: 0px 0px 0px 0px
  -moz-box-shadow: 0px 0px 0px 0px
  box-shadow: 0px 0px 0px 0px
  padding-top: 1.5%
  padding-bottom: 1.5%
  border-color: $inactiveColor
  border-width: 2px
  border-style: dashed
  border-radius: $formRadius
  background-color: $inactiveColor2
  width: 95%
  text-align: center
  @media all and (min-width: 770px)
      width: 60%

.plus-button:hover
  cursor: pointer
.add
  color: $inactiveColor
  padding 3%
  font-size 4em
  font-style bold
a
  text-decoration: none

.patient
  width 95%
  max-width 1080px
  margin 0 auto 1rem auto
  border default-border
  border-radius 5px
  text-align center
.patient-name
  padding-top 1rem
  font-weight bold
  font-size 1.2rem
.space
  padding: 1%
.collapse-inner
  display inline-block
  padding: 0.5%
  width: 100%
.collapse
  display: none
  height: auto !important
  width: 100%
  overflow hidden
.graph-box
  width: 10%
  padding-right: 5%
  display: inline-block
  text-align: right

#graph
  width: 50%
  height: auto
  vertical-align: sub

.inspect1
  width: 100%
  display: block
  color: $white
  text-transform: uppercase
  text-align: center
  padding-top: 2%
  padding-bottom: 2%
  border-bottom-right-radius: $formRadius
  border-bottom-left-radius: $formRadius
  border-bottom: none
  background-color: #22B573
  -webkit-transition: background-color 0.3s
  transition: background-color 0.3s
  font-size: 2.5vw
  &:hover
    background-color: #1A924C
    cursor: pointer

.inspect2
  width: 100%
  display: block
  color: $white
  text-transform: uppercase
  text-align: center
  padding-top: 2%
  padding-bottom: 2%
  border-bottom-right-radius: $formRadius
  border-bottom-left-radius: $formRadius
  border-bottom: none
  background-color: #22B573
  -webkit-transition: background-color 0.3s
  transition: background-color 0.3s
  font-size: 2.5vw
  &:hover
    background-color: #1A924C
    cursor: pointer

// ! temporary styling ! only to test search function
.search-bar
  text-align: center
  width: 95%
  display: inline-block
  text-align center
  padding-left: 2.5%
  padding-right: 2.5%
  @media screen and (min-width: 770px)
    padding-left: 20%
    padding-right: 20%
    width: 60%
  @media screen and (min-width: 1700px)
    padding-left: 12.5px
    padding-right: 12.5px
#searchIcon
  width: 10%
  display: inline-block
  vertical-align: bottom
  padding: 0
#health
  width: 8%
  display: inline-block
  vertical-align: middle
  padding-left: 2%
  filter grayscale(100%)
  &:hover
    cursor pointer
    filter grayscale(0%)
#alphaOrder
  width: 9%
  vertical-align: middle
  padding-right: 2%
  padding-left: 4%
  filter grayscale(100%)
  &:hover
    cursor pointer
    filter grayscale(0%)
.search-bar > input, .search-bar > #searchIcon
  font-family: 'GothamLight'
  color: #bbb
  border none
  outline none
  background: transparent
  border-bottom: 3px solid $mainColor
  font-size: 4vw
  @media screen and (min-width: 770px)
    font-size: 2.5vw
  @media screen and (min-width: 1700px)
    font-size: 1vw
.search-bar > input:focus
  outline none
.search-bar > input
  padding: 2.5%
  vertical-align bottom
  width 65%
  border-top-right-radius 0
  border-bottom-right-radius 0
#buttonLeft
  width: 100%
#testing
  width 20%
  color: $mainColor
  border-top-right-radius $formRadius
  border-bottom-right-radius $formRadius
  background-size contain
  background-repeat no-repeat
  margin-left 88%
  margin-top -12%
  padding-bottom 13%
  font-size: 4vw
#testing:hover
  cursor pointer